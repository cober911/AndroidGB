<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    tools:context=".MainActivity"-->


    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/textCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#66CC33"
        android:background="@drawable/descr_text_center"
        android:text="@string/textCenter1"
         />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/textDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:textSize="40dp"
        android:background="@drawable/descr_text_center"
        android:text="@string/textButtonDown"
        android:layout_margin="16dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCenter"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/textButtonCenter"
        android:textSize="21dp"
        android:layout_margin="16dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/descr_button_center"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:background="@drawable/selector_button_left"
        android:padding="45dp"
        android:layout_margin="16dp"
        android:src="@drawable/outline_remove_24" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:padding="45dp"
        android:layout_margin="16dp"
        android:src="@drawable/outline_add_24"
        android:background="@drawable/selector_button_right"
        />


</FrameLayout>


